{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "dist",
		"jsx": "react-jsx",
		"sourceMap": true,
		"allowJs": true,
		"declarationDir": "dist/types",
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "./src/stories"]
}
